<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>Receta <%= receta.id %></title>
<style>
  @page { size: letter; margin: 20mm; }
  body { font-family: Arial, sans-serif; font-size: 14px; }
  header { display:flex; justify-content:space-between; margin-bottom: 20px; }
  table { width:100%; border-collapse: collapse; margin-top:20px; }
  th, td { border:1px solid #000; padding:6px; text-align:left; }
  h1 { text-align:center; }
</style>
</head>
<body>
  <header>
    <div>
      <strong>Médico:</strong> <%= medico.nombre %><br>
      <small><%= medico.email %></small>
    </div>
    <div>
      <strong>Paciente:</strong> <%= paciente.nombre %><br>
      <small><%= new Date(receta.fecha).toLocaleDateString() %></small>
    </div>
  </header>
  <h1>Receta médica</h1>
  <p><strong>Motivo:</strong> <%= receta.motivo %></p>
  <p><strong>Instrucciones generales:</strong> <%= receta.instrucciones_generales %></p>
  <table>
    <thead><tr><th>Medicamento</th><th>Dosis</th><th>Posología</th><th>Obs.</th></tr></thead>
    <tbody>
      <% items.forEach(i => { %>
        <tr>
          <td><%= i.Medicamento.nombre %></td>
          <td><%= i.dosis %></td>
          <td><%= i.posologia %></td>
          <td><%= i.observaciones || '' %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
